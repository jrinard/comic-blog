{{#if updatePostForm}}
<h4>Update {{post.title}}</h4>
<div id="new-post-form" class="well">
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input class="form-control" value=title id="title" placeholder=post.title}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{input class="form-control" value=body id="body" placeholder=post.body}}
    </div>

    <div class="form-group">
      <label for="teaser">Teaser</label>
      {{input class="form-control" value=teaser id="teaser" placeholder=post.teaser}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input class="form-control" value=image id="image" placeholder=post.image}}
    </div>

    <div class="form-group">
      <label for="owner">Owner</label>
      {{input class="form-control" value=owner id="owner" placeholder=post.owner}}
    </div>
    <button class="btn btn-primary"{{action 'update' post}}>Save</button>
  </form>
</div>
{{else}}
  <button class="btn btn-primary"{{action 'updatePostForm'}}>Update</button>
{{/if}}
